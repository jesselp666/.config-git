#!/bin/bash

RET=$(echo -e "Wallpaper\nAppearance\ndwm-bar\nMouse/Touchpad\nDisplay\nTrackpoint\nDefault-Apps\nDisks\nTask-Scheduler\nAutostart\nzsh-profile\nSystem-Updates\nGenerate-Mirrorlist\nCancel" | dmenu -p "System Management:")

case $RET in
    Wallpaper) nitrogen ;; Appearance) st -e vim ~/.xsettingsd ;; dwm-bar) st -e vim ~/.scripts/bin/dwm-bar ;; Mouse/Touchpad) st -e sudo vim /etc/X11/xorg.conf.d/70-synaptics.conf ;; Display) st -e sudo vim /etc/X11/xorg.conf.d/10-monitor.conf ;;Trackpoint) st -e sudo vim /etc/udev/rules.d/10-trackpoint.rules ;; Default-Apps) st -e vim ~/.config/mimeapps.list ;; Disks) gnome-disks ;; Task-Scheduler) st -e fcrontab -e ;; Autostart) st -e vim ~/.xinitrc ;; zsh-profile) st -e vim ~/.zprofile ;; System-Updates) st -e yay -Syyuu ;; Generate-Mirrorlist) mirrorlist-generator ;; *) ;; 
esac
