#!/bin/bash

RET=$(echo -e "Appearance\nMouse/Touchpad\nDisplay\nTrackpoint\nAutostart\n.zprofile\nCancel" | dmenu -p "System Settings")

case $RET in
    Appearance) st -e vim ~/.xsettingsd ;; Mouse/Touchpad) st -e sudo vim /etc/X11/xorg.conf.d/70-synaptics.conf ;;	Display) st -e sudo vim /etc/X11/xorg.conf.d/10-monitor.conf ;;Trackpoint) st -e sudo vim /etc/udev/rules.d/10-trackpoint.rules ;; Autostart) st -e vim ~/.xinitrc ;; .zprofile) st -e vim ~/.zprofile ;; *) ;;
esac
