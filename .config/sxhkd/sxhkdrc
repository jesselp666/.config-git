#
# wm independent hotkeys
#

# lock screen
XF86Launch1
    slimlock

# terminal emulator
grave
	urxvtc

# web browser
alt + w
    qutebrowser	

# url bar & web search
super + s
    dmenu-websearch

# alternate web browser
super + w
    chromium

# file manager
alt + f
	pcmanfm

# music player
alt + m
	urxvtc -e musikcube

# view weather
alt + shift + w
    qutebrowser --target=window https://wttr.in/22485

# nicotine
alt + n
	nicotine

# network manager
alt + shift + n
    gnome-terminal --hide-menubar -e nmtui

# pushbullet sms
alt + p
    qutebrowser --target=window https://www.pushbullet.com

# calculator
alt + c
	gnome-calculator

# dmenu run command
super + d
    dmenu_run

# desktop menu
super + @space
    j4-dmenu-desktop

# take screenshot
Print
	flameshot full -d 2000 -p ~/Pictures/Screenshots/

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd

#
# media keys
#

XF86AudioRaiseVolume
	amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+10

XF86AudioLowerVolume
	amixer -q -D pulse sset Master 5%- && pkill -RTMIN+10

XF86AudioMute
	amixer -q -D pulse sset Master toggle && pkill -RTMIN+10

XF86AudioMicMute
	amixer -q -D pulse sset Capture toggle && pkill -RTMIN+10

#
# bspwm hotkeys
#

# logout/restart bspwm
alt + shift + {e,r}
	{bspwm-logout,bspc wm -r}

# close and kill
alt + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
alt + u
       bspc desktop -l next

# send the newest marked node to the newest preselected node
alt + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
alt + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
alt + {t,p,space,u}
	bspc node -t {tiled,pseudo_tiled,floating,monocle}

# set the node flags
alt + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# hide node
alt + shift + i
	bspc node -g hidden

# unhide
alt + i
	bspc query -N -n .hidden | xargs -I winID bspc node winID -g hidden=off

#
# focus/swap
#

# focus the node in the given direction
alt + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
#alt + {p,b,comma,period}
#	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
alt + {comma,period}
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
alt + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
alt + grave
	bspc desktop -f last

#alt + Tab
#         bspc node -f last

# focus the older or newer node in the focus history
alt + {o,l}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
alt + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
alt + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
alt + ctrl + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
